<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publish date</th>
      <th>Author</th>
      <th>Number page</th>
      <th>Category</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.publish_date %></td>
        <td><%= book.author %></td>
        <td><%= book.number_page %></td>
        <td><%= book.category %></td>
        <td><%= book.picture %></td>
        <td><%= link_to_if current_user, 'Show', admin_book_path(book) %></td>
        <% if current_user.role == "admin" %>
            <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
            <td><%= link_to 'Destroy', admin_book_path(book), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<div class = "books">
  <h1>Listing Books</h1>

  <table>
    <tbody>
      <% @books.each do |book| %>
        <div class =  "book">
          <th>
            <p>
              <%= image_tag book.picture if book.picture? %>
            </p>
          </th>
          <th>
            <p>
              <strong>Title:</strong>
              <%= book.title %>
            </p>

            <p>
              <strong>Publish date:</strong>
              <%= book.publish_date %>
            </p>

            <p>
              <strong>Author:</strong>
              <%= book.author %>
            </p>

            <p>
              <strong>Number page:</strong>
              <%= book.number_page %>
            </p>

            <p>
              <strong>Category:</strong>
              <%= book.category %>
            </p>

            <p>
              <%= link_to_if current_user, 'Show', book_path(book) %>
            </p>
          </th>
        </div>
      <% end %>
    </tbody>
  </table>

<br>
</div>